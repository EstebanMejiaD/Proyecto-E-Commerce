<div class="container contenedor-lista-de-productos">

  <div class="row" id="productos">
    <!-- Aqui va contenida la lista de los productos de manera dinamica-->
    {{#each cartProduct}}
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img
              src="/image/{{imagen}}"
              class="img-fluid rounded-start"
              alt="{{ProductSlug}}"
            />
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">{{ProductName}}</h5>
              <h5>Precio und: {{ProductPrice}}</h5>
              <a
                href="/cart/comprar/{{ProductID}}"
                style="cursor:pointer"
                class="btn btn-success comprar-carrito"
              > Comprar</a>
              <a href="/cart/delete/{{ProductID}}" style="cursor:pointer"><i
                  class="bi bi-trash3-fill eliminar-carrito"
                ></i></a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  <!--row-->

