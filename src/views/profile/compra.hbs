<div class="container">
  <div class="row">
    <div class="col-md-8 tituloShop">
      <h1 class="TituloH1">
        <b>Proceso de compra.</b>
      </h1>
    </div>
  </div>
</div>


  {{#each domicilio}}
  <div class="container contenedor-domicilio">

  
    <div class="row">

      <h3 class="titulo-direccion"><i class="bi bi-geo-alt-fill"></i>
        Direccion de entrega</h3>

      <div class="col-md-3 rows-md3-domi">
        <h4>{{nombreCompleto}}</h4>
      </div>

      <div class="col-md-7">
        <p>{{direccion}}, {{ciudad}}, {{municipio}}.
          {{detalle}}, {{telefono}}.</p>
      </div>

      <div class="col-md-2 rows-md3-domi button-editar-domi">
        <a href="/domicilio/cambiar/{{domicilioID}}" class="btn btn-success">Cambiar</a>
      </div>

    </div>
    </div>
  {{else}}
    <div class="col-md-4 mx-auto contenedor-sin-domicilio">
      <div class="card card-body text-center" style="border: none;">
        <p>Aun no tienes direccion de entrega.</p>
        <a href="/domicilio/add" class="btn btn-primary">Crear Una.</a>
      </div>
    </div>

  {{/each}}

<div class="container contenedor-lista-de-productos">

  <div class="row" id="productos">
    <!-- Aqui va contenida la lista de los productos de manera dinamica-->
    {{#each productoAComprar}}
      <div class="col-md-12">
        <div class="card mb-3" >
          <div class="row g-0">
            <div class="col-md-4">
              <img
                src="/image/{{imagen}}"
                class="img-fluid rounded-start"
                alt="{{ProductSlug}}"
              />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h3 class="card-title">{{ProductName}}</h3>
                <h5 class="prueba"> {{ProductPrice}}USD</h5>
                <div style="color: #Ffff;" class="idproducto">{{ProductID}}</div>
               
                
              </div>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  <div class="container container-mobible">
    <h6>Precio de env√≠o: {{envio}}USD</h6>
    <h6>total del pedido {{total}}USD</h6>
  </div>


